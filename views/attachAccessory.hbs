<h1>Attach a new accessory</h1>
<div class="form">
  <h2>{{car.name}}</h2>
  <img class="cube" src="{{car.imageUrl}}" />
  {{#if accessories}}
    <form action="/attach/{{car._id}}" method="POST">
      <label for="accessory">Accessories</label>
      <select id="accessory" name="accessory">
        {{#each accessories}}
          <option value="{{_id}}">{{name}}</option>
        {{/each}}
      </select>
      <input type="submit" value="Attach" />
    </form>
  {{else}}
    <h3 class="italic">This car has all available accessories...
    </h3>
  {{/if}}
  <a class="btn" href="/details/{{car._id}}">Back</a>
</div>