<h1>Create</h1>
{{#if errors.general}}
  <p class="error">{{errors.general}}</p>
{{/if}}
<div class="form">
  <form action="/create" method="POST">
    <label for="name">Name *</label>
    <input type="text" id="name" name="name" value="{{car.name}}"/>
    {{#if errors.name}}
      <p class="error">{{errors.name}}</p>
    {{/if}}
    <label for="name">Description</label>
    <textarea id="name" name="description">{{car.description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{car.imageUrl}}"/>
    {{#if errors.imageUrl}}
      <p class="error">{{errors.imageUrl}}</p>
    {{/if}}
    <label for="price">Price *</label>
    <input type="number" id="price" name="price" value="{{car.price}}"/>
    {{#if errors.price}}
      <p class="error">{{errors.price}}</p>
    {{/if}}

    <input type="submit" value="Create" />
  </form>
</div>